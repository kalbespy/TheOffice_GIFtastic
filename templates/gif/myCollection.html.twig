{% extends 'base.html.twig' %}

{% block title %}Gif Collection
{% endblock %}

{% block body %}
	<h1>
		My GIF Collection</h1>

	<section class="d-flex flex-row flex-wrap justify-content-around">
		{% for gif in user.collection %}
			<div class="card col-3 text-center m-3">
				<h3 class="card-header">
					{{gif.title}}
				</h3>
				<div class="card-body">
					<img src="{{asset('build/images/' ~ gif.picture)}}" alt="">
					<h4 class="card-title m-3">
						Votes:
						<span>{{ gif.nbOfVotes }}</span>
					</h4>
					<a class="btn btn-primary randomBtn m-3 collectionBtn" href="{{ path('app_gif_remove', {'id': gif.id}) }}">Remove from your collection</a>
					<a class="btn btn-primary randomBtn m-3 voteBtn" href="{{ path('app_gif_vote', {'id': gif.id}) }}">Add a vote</a>
				</div>
			</div>
		{% else %}
			<h3 colspan="5">You have no GIF in your collection.</h3>
		{% endfor %}
	</section>
{% endblock %}
