{% extends 'base.html.twig' %}

{% block title %}Random GIF
{% endblock %}

{% block body %}
	<section class="min-vh-100 text-center">
		<h1 class="text-center m-5">Random GIF</h1>

		<div class="card col-4 text-center m-auto">
			<h3 class="card-header">
				{{randomGif.title}}
			</h3>
			<div class="card-body">
				<img src="{{asset('build/images/' ~ randomGif.picture)}}" alt="">
				<h4 class="card-title m-3">
					Votes:
					<span>{{ randomGif.nbOfVotes }}</span>
				</h4>

				{% if app.user %}
					<a class="btn {% if collectionCheck %} btn-success disabled{% endif %} btn-primary randomBtn m-3 collectBtnRandom" href="{{ path('app_gif_collect', {'id': randomGif.id}) }}">
						{% if collectionCheck %}
							GIF Collected
						{% else %}
							Add to your collection
						{% endif %}
					</a>
				{% else %}
					<a class="btn btn-primary randomBtn m-3" href="{{ path('app_login') }}">
						Add to your collection
					</a>
				{% endif %}

				{% if app.user %}
					<a class="btn btn-primary randomBtn m-3 voteBtn" href="{{ path('app_gif_vote', {'id': randomGif.id}) }}">
						Add a vote</a>
				{% else %}
					<a class="btn btn-primary randomBtn m-3" href="{{ path('app_gif_vote', {'id': randomGif.id}) }}">
						Add a vote</a>
				{% endif %}
			</div>
		</div>

		<a href="{{ path('app_gif_random') }}" class="btn btn-primary randomBtn m-3">Load another Gif</a>

	</section>
{% endblock %}
