{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<h1>Connexion</h1>

	<form class="d-flex row m-5 col-3" action="{{ path('app_login') }}" method="post">
		<div class="d-flex row m-3">
			<label for=" username">Email:</label>
			<input type="text" id="username" name="_username" value="{{ last_username }}">
		</div>

		<div class="d-flex row m-3">
			<label for="password">Password:</label>
			<input type="password" id="password" name="_password">
		</div>

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<div class="d-flex row m-3">
			<button type="submit">Login</button>
		</div>

		<!-- If you want to control the URL the user is redirected to on success <input type="hidden" name="_target_path" value="/account"> #} -->
	</form>
	<p>Don't have an account yet ? Click here to
		<a href="{{ path('app_register') }}">Register</a>
	</p>

{% endblock %}
