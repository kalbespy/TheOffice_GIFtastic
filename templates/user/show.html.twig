{% extends 'baseAdmin.html.twig' %}

{% block title %}Show User
{% endblock %}

{% block body %}
	<main class="m-3">

		<h1>User</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Pseudo</th>
					<td>{{ user.pseudo }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-secondary originalbtn" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>

		{{ include('user/_delete_form.html.twig') }}

		<div class="mt-5">
			<a href="{{ path('app_user_index') }}">Back to list</a>
		</div>

	</main>
{% endblock %}
